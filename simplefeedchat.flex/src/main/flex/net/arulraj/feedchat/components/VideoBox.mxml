				 width="{partnerVideoDisplay.width}" height="{partnerVideoDisplay.height}">
			<s:layout>
				<s:HorizontalLayout verticalAlign="middle" horizontalAlign="center" gap="0" />
			</s:layout>			
		</s:Group>
	</s:Group>
